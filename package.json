{
  "name": "@conversationlearner/sdk",
  "version": "0.0.0-development",
  "description": "Node SDK for Conversation Learner",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "npm run lint",
    "build": "tsc",
    "clean": "rm -rf lib",
    "prettier": "prettier",
    "runprettier": "prettier --write --no-semi --single-quote src/**/*.ts",
    "prepublishOnly": "tsc",
    "pretest": "tsc",
    "tsc": "tsc",
    "test": "jest",
    "setpackageversion": "tsc -p ./scripts/tsconfig.json && node ./scripts/setpackageversion.js",
    "verifypackagelock": "tsc -p ./scripts/tsconfig.json && node ./scripts/verifypackagelock.js",
    "ui": "node ./lib/clUiRunner.js"
  },
  "author": "Microsoft Conversation Learner Team",
  "license": "MIT",
  "dependencies": {
    "@conversationlearner/models": "0.156.0",
    "@conversationlearner/ui": "0.244.0",
    "async-file": "^2.0.2",
    "botbuilder": "4.0.0-preview1.0",
    "express": "^4.15.3",
    "filenamify": "^2.0.0",
    "node-cache": "^4.1.1",
    "offline-directline": "1.2.2",
    "redis": "^2.7.1",
    "request": "^2.79.0",
    "restify": "^6.3.2",
    "restify-cors-middleware": "^1.1.0",
    "restify-errors": "^6.0.0",
    "swagger-client": "^2.1.32",
    "tslib": "^1.5.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/execa": "^0.8.1",
    "@types/express": "^4.11.0",
    "@types/filenamify": "^2.0.1",
    "@types/fs-extra": "^5.0.0",
    "@types/jest": "^22.1.0",
    "@types/node": "^8.0.28",
    "@types/node-cache": "^4.1.0",
    "@types/redis": "^2.6.0",
    "@types/request": "^2.0.3",
    "@types/restify": "^5.0.7",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/restify-errors": "^4.3.2",
    "@types/xmldom": "^0.1.29",
    "execa": "^0.9.0",
    "fs-extra": "^5.0.0",
    "http-server": "^0.9.0",
    "jest": "^22.1.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.10.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.4.2"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "testMatch": [
      "**/lib/**/?(*.)(spec|test).js?(x)"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 140
  },
  "publishConfig": {
    "tag": "next",
    "access": "public"
  }
}
